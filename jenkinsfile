pipeline {
    agent {
        docker {
            image 'maven:3.8.6-openjdk-11'
            args '-u root:root'
        }
    }
    stages {
        stage('Install dependencies') {
            steps {
                // Installe les dépendances Maven et JMeter
                sh 'mvn clean install -DskipTests'
                sh 'wget https://archive.apache.org/dist/jmeter/binaries/apache-jmeter-5.5.tgz'
                sh 'tar -xvzf apache-jmeter-5.5.tgz'
            }
        }
        stage('Configure JMeter') {
            steps {
                // Configure le plugin JMeter pour créer le fichier config.json
                sh 'mvn jmeter:configure'
            }
        }
        stage('Run JMeter Tests') {
            steps {
                // Lance les tests JMeter
                sh 'mvn jmeter:jmeter -DtestFile=src/test/jmeter/Plandetestdepartements.jmx'
            }
        }
    }
}
