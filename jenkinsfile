pipeline {
    agent {
        docker {
            image 'maven:3.8.6-openjdk-11'
            args '-u root:root'
        }
    }
    stages {
        stage('Build Project') {
            steps {
                sh 'mvn clean install -DskipTests'
            }
        }
        
        stage('Run JMeter Tests') {
            steps {
                sh 'mvn jmeter:jmeter -DgenerateReports=true -DresultsDirectory=target/jmeter/results'
            }
        }
    }

    post {
        always {
            // ðŸ”¹ Archive les rÃ©sultats bruts pour Jenkins
            archiveArtifacts artifacts: 'target/jmeter/results/**/*', allowEmptyArchive: true
            
            // ðŸ”¹ Publie le rapport HTML de JMeter
            publishHTML(target: [
                allowMissing: true,
                alwaysLinkToLastBuild: false,
                keepAll: true,
                reportDir: 'target/jmeter/results',
                reportFiles: 'index.html',
                reportName: 'JMeter Performance Report'
            ])
            
            // ðŸ”¹ Ajoute les rÃ©sultats au plugin Performance
            performanceReport sourceDataFiles: 'target/jmeter/results/*.jtl', parserType: 'JMeter'
        }
    }
}
