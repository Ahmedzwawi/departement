pipeline {
    agent {
        docker {
            image 'justb4/jmeter:5.5'
            args '-u root:root -v /var/run/docker.sock:/var/run/docker.sock -v /tmp:/tmp'
        }
    }
    stages {
              stage('run jmeter tests') {
            steps {
                script {
                    
                    def jmeterTestFiles = findFiles(glob: 'src/test/jmeter/Plan de test departements.jmx')
                    for (def testFile : jmeterTestFiles) {
                        sh "jmeter -n -t ${testFile} -l ${testFile}.jtl"
                    }
                }
            }
        }
    }
}
