pipeline {
    agent {
        docker {
            image 'justb4/jmeter:5.5'
            args '-u root:root'
        }
    }
    stages {
        stage('Run JMeter Tests') {
            steps {
                sh 'jmeter -n -t src/test/jmeter/Plan\ de\ test\ departements.jmx -l src/test/jmeter/Plan\ de\ test\ departements.jtl'
            }
        }
    }
}
