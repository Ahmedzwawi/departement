pipeline {
    agent any
    stages {
        stage('build and install') {
            steps {
                sh 'docker pull alpine/jmeter:5'
                echo 'JMeter container is ready'
            }
        }

        stage('run jmeter tests') {
            steps {
                sh 'jmeter -n -t src/test/jmeter/Plan_de_test_departements.jmx'
            }
        }
    }
}
